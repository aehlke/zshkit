
#
# Set Locale
#
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

#
# Homebrew
#
if [[ -x `which brew` ]]; then
  export HOMEBREW_PATH=$HOME/.homebrew
  export PATH=${HOMEBREW_PATH}/bin:${HOMEBREW_PATH}/sbin:$PATH
fi

# Set git env
#export GIT_PAGER="mate"

# XCode 	: http://developer.apple.com/technologies/tools/xcode.html
export APPLE_DEVELOPER_DIR="/Developer/usr"
# Manually
export MANUALLY_INSTALLED_DIR="/usr/local"
# Macports
export MACPORTS_DIR="/opt/local"
# My Applications
export MY_APPLICATIONS_DIR="$HOME/Applications"
# Dev workspace
export MY_WORKSPACE_DIR = "$HOME/workspace"
# Official X11
export X11_DIR="/usr/X11"
# Mounted volumes
export VOLUMES_DIR="/Volumes"

# HomeBrew
#TODO

# Java 1.6 Home on Mac OS X
export JAVA_HOME="/Library/Java/Home"
# Swap folder on Mac OS X
export SWAP_DIR="/var/vm/"


# Some usefull paths (cd ~D)
# My Documents
export D="$HOME/Documents"
# My Downloads
export DL="$HOME/Downloads"
# My Workspace
export W="$MY_WORKSPACE_DIR"
# This project
export Z="$MY_WORKSPACE_DIR/zshkit"

# PATH
export PATH="$MANUALLY_INSTALLED_DIR/bin:$MANUALLY_INSTALLED_DIR/sbin:$MACPORTS_DIR/bin:$MACPORTS_DIR/sbin:$MY_APPLICATIONS_DIR:/bin:/sbin:/usr/bin:/usr/sbin:$X11_DIR/bin:."
export MANPATH="$MACPORTS_DIR/man:$MACPORTS_DIR/share/man:$X11_DIR/man:$X11_DIR/share/man:$MANUALLY_INSTALLED_DIR/man:$MANUALLY_INSTALLED_DIR/share/man:/usr/share/man"
export FPATH="$HOME/.zsh/func:$FPATH"
export CDPATH="$MY_APPLICATIONS_DIR:$P:$D:$DL:$SB:$NBP:$RP:$VOLUMES_DIR:$HOME"



