# Some MacPorts alias
alias pins="sudo port -v install"
alias psearch="port search"
alias pinfo="port info"

# Update the list, display the outdated, make the update and uninstall the inactives
alias updateMP='sudo port selfupdate && sudo port outdated && sudo port upgrade outdated && sudo port uninstall inactive'

# Some SSH/Telnet acces
alias ensisun='ssh gelibera@ensisun.imag.fr'
alias nas_local='ssh root@diskstation.local'
alias nas_telnet='telnet diskstation.local'

# Some fancy displays
# Memory hogs using top and ps
alias mem_hogs_top='top -l 1 -o rsize | head -30'
alias mem_hogs_ps='ps wwaxm -o pid,stat,vsize,rss,time,command | head -20'
# CPU hogs using ps
alias cpu_hogs='ps wwaxr -o pid,stat,%cpu,time,command | head -20'
# Open sockets using lsof
alias lsock='sudo lsof -i -P -n'

# Some useful information
# IP configurations 
alias ip0_info='ipconfig getpacket en0'
alias ip1_info='ipconfig getpacket en1'
alias ip2_info='ipconfig getpacket en2'
# Optical Drive information
alias od_info='drutil info'
# Access Point information
alias ap_info='/System/Library/PrivateFrameworks/Apple80211.framework/Versions/A/Resources/airport -I'


# Useful terminal command 
# Eject a volume
alias eject='hdiutil eject'
# Apache
alias apache2ctl='sudo /opt/local/apache2/bin/apachectl'
# Copy the working dir to the clipboard
alias cpwd='pwd | xargs echo -n | pbcopy' 
# Go to felix dir, clean the cache and start 
alias felix='(cd $FELIX_DIR; rm -rf felix-cache && java -jar bin/felix.jar)'


local ASM_DEBUG_ALL_JAR="$ASM_DIR/lib/all/asm-debug-all-3.2.jar"
function asmifier() 
{
    if [ $# -eq 1 ]; then
        java -classpath "$ASM_DEBUG_ALL_JAR" org.objectweb.asm.util.ASMifierClassVisitor $1
    fi
}

function exportkey() 
{
    if [ $# -eq 2 ]; then
        cat $1 | ssh $1 "cat >> ~/.ssh/authorized_keys"
    fi
}
