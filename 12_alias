# Copy the working dir to the clipboard

if [[ -x `which pbpaste` ]]; then
  alias pcd="cd '`pbpaste`'"
fi
if [[ -x `which pbcopy` ]]; then
  #alias cpwd="pwd | pbcopy"
  alias cpwd='pwd | xargs echo -n | pbcopy'
fi

